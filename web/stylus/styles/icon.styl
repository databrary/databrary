// STYLES

.icon
  display inline-block
  position relative
  background-color transparent
  background-repeat no-repeat
  background-position center
  width b23+1px
  height b23
  transition transition
  &.volume
    size b1
  &.record,
  &.session
    height b23
    width b23+b8
  &.release
    min-width 28px

  &.activity
    background-image url('/web/images/icon/activity.svg')

  &.bullet
    background-image url('/web/images/icon/bullet.png')

  &.contact
    background-image url('/web/images/icon/contact.png')

  &.close
    background-image url('/web/images/icon/close.png')

  &.list
    background-image url('/web/images/icon/list.svg')
    background-size contain
    &:hover
      opacity 0.4

  &.release.PRIVATE
    background-image url('/web/icons/release/private.svg')

  &.release.SHARED
    background-image url('/web/icons/release/shared.svg')

  &.release.EXCERPTS
    background-image url('/web/icons/release/excerpts.svg')

  &.release.PUBLIC
    background-image url('/web/icons/release/public.svg')

  &.session
    background-image url('/web/images/icon/session.png')
    &:hover
      opacity 0.4

  &.volume
    background-image url('/web/images/icon/study.png')

  &.download
    background-image url('/web/images/icon/download.png')
    &:not(.button)
      margin-right b3
    &:hover:not(.button)
      opacity 0.4

  &.edit
  &.edit:hover
    background-image url('/web/images/icon/edit.svg')
    background-size contain

  &.view-icon
  &.view-icon:hover
    background-image url('/web/images/icon/view.svg')
    background-size contain

  &.info
    background-image url('/web/images/icon/info.svg')
    background-size contain

  &.jump
    background-image url('/web/images/icon/jump.png')

  &.play
    background-image url('/web/images/icon/play.png')

  &.pause
    background-image url('/web/images/icon/pause.png')

  &.add
    background-image url('/web/images/icon/add.png')
    &:hover
      opacity 0.4

  &.tag
    background-image url('/web/images/icon/tag.svg')

  &.trash
    background-image url('/web/images/icon/close_c.png')
    cursor pointer
  &.trash2
    background-image url('/web/images/icon/trash.png')
    cursor pointer
    &:hover:not(.button)
      opacity 0.4

  &.paste
    background-image url('/web/images/icon/paste.png')
    cursor pointer

  &.resize
    background-image url('/web/images/icon/resize.svg')
    background-size contain
    &:hover
      opacity 0.4

  &.settings
    background-image url('/web/images/icon/settings.svg')
    background-size contain

  &.zoomin
    background-image url('/web/images/icon/zoomin.svg')
    cursor pointer
    background-size 16px
  &.zoomout
    background-image url('/web/images/icon/zoomout.svg')
    cursor pointer
    background-size 16px

  &.line
    height b1
    background-position 0px 4px
    &.add
      width b1
    &.session
      width b1+b8

.sort
  background-position right
  background-repeat no-repeat

  &.sortable
    background-image url('/web/images/icon/sortable.png')

  &.sort-asc
    background-image url('/web/images/icon/sort-asc.png')

  &.sort-desc
    background-image url('/web/images/icon/sort-desc.png')

th
  &.add
    background-repeat no-repeat
    background-image url('/web/images/icon/add.png')
    transition transition

    &:hover
      opacity 0.4

