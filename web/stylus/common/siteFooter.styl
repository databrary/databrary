// styles

.site-footer
  border-top 1px solid pale
  padding-height f1
  overflow hidden

.site-footer-links
  text-align left
  font-size .9

.site-footer-social
  height b4 * 3
  position relative
  top -2px
  font-size .9

  p
    text-align right
    margin 0

  img
    height 16px
    position relative
    top 1px

    &:hover
      opacity 0.7
    &:active
      opacity 0.4

.site-footer-legal
  font-line .75 f2

  p
    margin-bottom f2

.site-footer-grants
  font-size .9
  margin-bottom f2
  margin-left 0
  padding 0
  position relative
  top -16px

  li
    margin 0 f2 0 0
    display inline-block

    &:before
      display none

  img
    position relative

    &.nsf
      top b2

    &.nih
      top b3
