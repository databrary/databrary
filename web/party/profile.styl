.profile-highlight
  background-color orange52
.profile-affiliate-highlight
  background-color orange51
.profile-volumes, .profile-parties
  padding-top b1
  .button.icon, .button.icon:hover
    width 16px
    height 16px
    padding 0
  ul
    padding-left 0
    padding-right 0
  li:before
    content none
  li
    overflow hidden
  li:hover
    .profile-hover-link
      display inline-block
      visibility visible
  a
    overflow hidden
  .button:not(.icon)
    font-size 12px
    line-height 12px
    background-color white
    padding-top b8
    padding-bottom b8
    &:hover
      background-color neutral51
    &:focus
      background-color neutral52

.profile-volumes
  ul
    margin-top b1
  li
    border-bottom b8 solid green51
    padding b4 b3

.profile-parties
  @media screen and (min-width: grid-mobile-width+1)
    border-left b2 solid neutral52
  .permission-auth-expiration
    font-size b2
    color neutral
    margin-left b3
  .permission-auth-expiration.expired
    color red
  ul
    margin 0
    padding b2 0
    .profile-additional
      margin-left b1
  li
    padding b8 0 0 b6
    margin 0

.profile-section
  margin-bottom b2
  border-bottom b8 solid green51
    
.profile-section-header
  font-line f1
  border-bottom 1px dotted neutral
  .icon, .button, .button:hover
    margin 0 0 0 8px
  
.profile-subsection-header
  margin-top b4
  font-size b2
  line-height b2
  .icon
    size b2
    
.profile-additional
  font-size b2
  line-height b2
  margin-bottom b8

.profile-left-icons
  display inline-block
  position relative
  margin 0 b3 0 0
  width 16px
.profile-right-icons
  float right
  position relative
  background-size contain
  height 19px
  .icon
    margin 0 b3  
.profile-link
  display inline
  overflow hidden
  vertical-align text-top
  line-height 22px

.profile-hover-link
  display none
  visibility hidden
  margin-left b3
  
.profile-mobile-header
  background-color green51
  margin-bottom b2
  margin-left -12%
  margin-right -b2
  padding-left 12% 
  padding-right b2