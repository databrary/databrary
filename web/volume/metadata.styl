metadata-match-form
  table
    margin 20px 0

    th
      background-color #eee
      font-weight bold

    th, td
      border 1px solid #ccc
      padding 10px

    td
      background-color #fff !important

  button
    margin 0 20px 0 0

  .skip-text
    display none

metadata-form
  button
    margin 0 20px 0 0

.margin-top
  margin 20px 0

.filename
  font-weight bold
  background-color #fff
  display inline-block
  border-radius 5px
  transition all 0.5s
  -webkit-transition all 0.5s
  padding 10px

  &.padding
    background-color #fcede3

.null
  background-color #fde7e7
  padding 10px
  display block
  margin -10px

.nulltext
  display none
  color #f26363